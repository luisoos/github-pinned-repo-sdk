{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",     // ← ADD: source location
    "outDir": "./dist",     // ← ADD: output location  
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],   // ← ADD: compile these files
  "exclude": ["node_modules", "dist"]
}
